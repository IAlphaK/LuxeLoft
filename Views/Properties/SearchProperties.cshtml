@model LuxeLoft.Models.Property

@{
    ViewData["Title"] = "Search Properties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .search-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh; /* Adjust height as needed */
        padding: 20px;
    }

    .search-form {
        width: 100%;
        max-width: 500px; /* Adjust width as needed */
        background-color: #EEEEEE;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px; /* Adjust spacing as needed */
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    select, input[type=range], output {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<div class="search-container">
    <form asp-action="SearchProperties" method="post" class="search-form">
        <div class="form-group">
            <label for="Location">Location</label>
            <select asp-for="Location" class="form-control" asp-items="ViewBag.Location"></select>

        </div>
        <div class="form-group">
            <label for="Type">Property Type</label>
            <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"></select>

        </div>


        <div class="form-group">
            <label for="minPrice">Minimum Price</label>
            <input type="range" id="minPrice" name="minPrice" min="0" max="100000000" value="0" class="form-control-range" />
            <output for="minPrice" id="minPriceOutput">0</output>
        </div>
        <div class="form-group">
            <label for="maxPrice">Maximum Price</label>
            <input type="range" id="maxPrice" name="maxPrice" min="0" max="100000000" value="100000000" class="form-control-range" />
            <output for="maxPrice" id="maxPriceOutput">100000000</output>
        </div>
        <div class="form-group">
            <input type="submit" value="Find" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('minPrice').oninput = function () {
            document.getElementById('minPriceOutput').value = this.value;
        }
        document.getElementById('maxPrice').oninput = function () {
            document.getElementById('maxPriceOutput').value = this.value;
        }
    </script>
}
