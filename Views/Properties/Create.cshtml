@model LuxeLoft.Models.Property

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="padding-top: 30px; padding-bottom: 10px;" class="create">Add New Property</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group" style="padding-bottom:20px;">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:5px;">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:5px;">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:5px;">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control" asp-items="ViewBag.Location"></select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:5px;">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Property Features -->
            <div id="feature-container" style="padding-bottom:5px;">
                <label>Property Features</label>
                <div class="feature-input-container">
                    <input type="text" name="features" class="form-control feature-input" placeholder="Feature 1" />
                </div>
                <button type="button" id="add-feature-btn" class="btn btn-secondary">Add another feature</button>
            </div>

            
            

            <div class="form-group" style="padding-bottom:20px;">
                <label asp-for="ThumbnailFile" class="control-label"></label>
                <input asp-for="ThumbnailFile" accept="image/*" />
                <span asp-validation-for="ThumbnailFile" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-bottom:20px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            var featureIndex = 2;

            $('#add-feature-btn').click(function () {
                $('#feature-container').append('<input type="text" name="features" class="form-control feature-input" placeholder="Feature ' + featureIndex++ + '" />');
            });
        });
    </script>
}